<div class="jumbotron jumbotron-fluid" style='background-color: #61c0bf ; height: 50%; '></div>
<div class = "container shadow-lg p-3 mb-5 bg-white rounded " style="
    margin-top: -342px;" >  
<h1 style="margin-top:40px;margin-bottom:70px;">Chat</h1><hr>
  <div id="messages">
    <% @conversation.messages.each do |message| %>
      <% if message.body %>
        <div class="media">
          
          <div class="media-body">
            <h5 class="media-heading"><%= message.user.username %> <small class="text-muted"><%= message.created_at.strftime('%k:%M %P') %></small></h5>
            <p><%= message.body %></p><hr>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= form_for [@conversation, @message] do |f| %>
    <div class="form-group">
      <%= f.text_area :body, autofocus: true, placeholder: "Your message", class: "form-control", rows: 5 %>
    </div>

    <%= f.submit "Send", class: "btn btn-primary pull-right" %>
  <% end %>
  </div>